@require '../../../ppc/styl/mixins'

#gallery-preloader

	position:absolute
	top:40%
	left:50%
	z-index:0
	width:256px
	height:24px
	margin:0 0 0 -128px
	background:url('../img/gallery/preloader.gif') no-repeat center center


#gallery
	
	position relative
	overflow hidden
	padding 0

	.wrapper
		margin 0 auto


		.items
			background #CCC
			position absolute


			.item 
				float left
				filter: url("data:image/svg+xml;utf8,<svg xmlns=\'http://www.w3.org/2000/svg\'><filter id=\'grayscale\'><feColorMatrix type=\'matrix\' values=\'0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0 0 0 1 0\'/></filter></svg>#grayscale")
				filter: gray
				filter(grayscale(100%) brightness(40%) contrast(90%))

				transition(all 0.3s ease-out)

				cursor pointer
			
				&.prev,&.next

					z-index 1
				&.next
					//display none
				&.current
					z-index 2
					filter none

				img
					outline none
					-ms-interpolation-mode: bicubic
					image-rendering: optimizeQuality

		&.speed .item img

			-ms-interpolation-mode: nearest-neighbor
			image-rendering: -moz-crisp-edges



			

					

#gallery-prev,#gallery-next,#gallery-pagination, #gallery-thumbs-prev, #gallery-thumbs-next
	float left
	margin 0 10px
	a
		float left
		margin 0 10px 0 0


#gallery-thumbs
	clear both
	overflow hidden
	background #424040
	margin 0
	padding 0
	.items
		position relative
		margin 0 auto
		.item
			float left
			filter(grayscale(100%) brightness(40%) contrast(90%))
			cursor pointer
			overflow hidden
			transition(all 0.3s)
			&.current,&:hover
				filter none




.controls

	width 510px
	margin 0 auto