@require '../../../ppc/styl/mixins'


#carousel,#carousel-2
	
	position relative
	background #CCC

	.items
		margin 0 auto
		.item 
			// filter: url("data:image/svg+xml;utf8,<svg xmlns=\'http://www.w3.org/2000/svg\'><filter id=\'grayscale\'><feColorMatrix type=\'matrix\' values=\'0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0 0 0 1 0\'/></filter></svg>#grayscale")
			// filter: gray
			// filter(grayscale(100%) brightness(40%) contrast(90%))
			// transition(all 0.3s ease-out)
			border 2px solid #000
			cursor pointer
		
			&.prev,&.next
				//
			&.next
				//
			&.current
				//filter none
				border 2px solid #F5EC0F

			img
				outline none
				-ms-interpolation-mode: bicubic
				image-rendering: optimizeQuality

	&.speed .item img

		-ms-interpolation-mode: nearest-neighbor
		image-rendering: -moz-crisp-edges

#carousel-prev,#carousel-2-prev
	position absolute
	left 0
	top 50%
	margin-left -50px

#carousel-next,#carousel-2-next
	position absolute
	right 0
	top 50%
	margin-right -50px

#carousel-pagination,#carousel-2-pagination
	float left
	margin 0 10px
	a
		float left
		margin 0 10px 0 0
		&.current
			text-decoration underline


.controls
	display table
	margin 0 auto