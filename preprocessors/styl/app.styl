@import 'normalize.css'
@import 'mixins'

/* FONTS */

import-font('ubuntu-r-webfont','Ubuntu')

// UNIQ MIXINS */

bg(filename)
	background url('../img/' + filename) no-repeat

// MAIN CONSTANTS

$mainWidth 		= 1265
$mainHeight 	= 1000

// COLORS

$red		= #ee2e24
$gray		= #ccc

/* STYLES FOR ALL */

textarea:focus, input:focus, input:focus
	outline none

ul
	list-style-type none

/* CLASS - HELPERS */

.hide 
	visibility hidden

.none
	display none

.clearfix
	clear both

.row
	block-inline()
	clear both
	width 100%


.pull-left
	block-left()


.pull-right
	block-right()

/* BUTTONS */

btn(w = false,h = false)
	if w
		width (w)px
	if h
		height (h)px

	display block
	position relative
	cursor pointer
	text-align center
	border 0
	outline none
	text-decoration none
	

/* Для ссылок */
.btn-1
	font 18px "Ubuntu"
	btn(200,50)
	border-radius(10px)
	text-transform uppercase
	color #FFF
	background $red
	transition all 0.2s
	&:hover
		background $gray
	span
		position relative
		top 15px

/* Для buttons */
.btn-2
	font 18px "Ubuntu"
	btn(200,50)
	border-radius(10px)
	text-transform uppercase
	color #FFF
	background $red
	transition all 0.2s
	&:hover
		background $gray



/* STYLES - MAIN */

html
	height 100%

body
	height 100%
	overflow-x hidden
	overflow-y auto
	font-family $mainFont
	
	/* Самый задний фон */

	background-color #0A1018

	// background-repeat no-repeat
