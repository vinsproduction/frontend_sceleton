@import 'normalize.css'
@import 'mixins'

/* _________ FONTS _________ */

import-font('../fonts/ubuntu-r-webfont','Ubuntu')

// MAIN CONSTANTS

g-mainWidth 	= 1265
g-mainHeight 	= 1000


// UNIQ MIXINS */

font-family(name)
	line-height 1.4
	font-family name, helvetica,verdana,arial,tahoma

font(size,name)
	//font-size unit(size*6.5, '%') convert px to percents
	font-size size
	font-family name

bg(filename, arguments=false)
	if !arguments
		arguments = no-repeat
	background url('../img/' + filename) arguments


/* _________ HELPERS ________*/

.g-clearfix
	clear both

.g-hide
	display none

.g-hidden
	visibility hidden

.g-block-inline
	vertical-align top
	block-inline()

.g-block-left
	block-left()

.g-block-right
	block-right()


/*_________ GUIDELINE _______*/

/*
	Все глобальные стили кнопок, форм, ссылок, списков и тд.
	описываются здесь
*/

@require 'guideline'

/*_________ MAIN __________*/


html
	height 100%

body
	height 100%
	overflow-x hidden
	overflow-y auto
	font-family Ubuntu
	
	background-color g-color-graydarker

	// bg 'bg.jpg', top center
	// background-attachment fixed
	// -webkit-background-size cover
	// -moz-background-size cover
	// -o-background-size cover
	// background-size cover
	
body > main
	
	position relative
	min-height 100%
	width 100%
	
	// Фон с изображением
	bg 'bg.jpg', repeat-y center center

	// background-attachment fixed
	// -webkit-background-size cover
	// -moz-background-size cover
	// -o-background-size cover
	// background-size cover


/*_________ HEADER ___________*/

body > main > header
	z-index 2
	width 100%
	height 40px

	background g-color-gray

	&.fixed
		position fixed
		top 0

	> .container
		width  (g-mainWidth)px
		height (40 - 12*2)px
		padding 12px 0
		margin 0 auto

		background g-color-graylight

		> .content
			padding 0 5px
			block-inline()
			width  (g-mainWidth - 5*2)px

			.logo
				a
					text-decoration none
					color #000

			nav#menu
				block-right()
				text-transform uppercase
				
				a 
					text-decoration none
					block-inline()
					position relative
					color #FFF

				ul
					float left
					padding 0
					li
						float left
						margin 0 0 0 50px
					

			.logo
				block-left()

/*_________ FOOTER ___________*/

body > main > footer
	position absolute
	bottom 0
	z-index 2
	width 100%
	height 40px

	background g-color-graydark

	&.fixed
		position fixed
		bottom 0

	> .container
		width  (g-mainWidth)px
		height (40 - 12*2)px
		padding 12px 0
		margin 0 auto

		background g-color-gray

		> .content
			padding 0 5px
			block-inline()


/*_________ SECTIONS _________*/

body > main > .sections

	clear both
	width 100%
	padding-bottom 40px // Height of the footer

	// Для всех секций!
	> section

		clear both
		position relative
		z-index 1
		width 100%
		block-inline()

		> .container
			position relative
			width  (g-mainWidth)px
			height 100%
			margin 0 auto

			background #F2E5D5

			> .content
				block-inline()
				padding 50px 20px


/* _________ PAGES _________*/

section#index
	.container
		.content
			//


section#guideline
	
	h1
		font 36px Ubuntu

	.row
		block-inline()
		clear both
		width 100%
		border-top 1px solid g-color-gray
		padding 20px 0

	.colors
		div
			block-left 100 50
			color #FFF
			padding 3px


section#fonts
	.container
		.content
			padding 50px 20px
			h1
				margin 30px 0
				font-size 24px	
			h2
				margin 30px 0
				font-size 47px
			.fonts
				width (1265 - 40)px
				overflow hidden
				p
					margin 15px 0
					background #FFF
					padding 0 10px
					border 1px solid gray
					//white-space nowrap
					.lowercase
						text-transform lowercase
					.uppercase
						text-transform uppercase


/* _________ POPUPS ________*/

@require 'popup'


/* _________ MEDIA _________ */

@require 'media'