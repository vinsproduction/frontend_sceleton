// Все глобальные классы начинаются с префикса g

// _______ КОНСТАНТЫ ________

// Путь до статики
$root = '../'

// Ширина контейнера с контентом
$mainWidth 	= 1265

/* _________ IMPORT ________*/

@import 'normalize.css'
@import 'mixins'

/*_________ GUIDELINE _______*/

//Все глобальные стили кнопок, форм, ссылок, списков и тд.
//описываются здесь

@require 'guideline'

/*_________ MAIN __________*/


html
	height 100%

body
	height 100%
	overflow-x hidden
	overflow-y auto
	font-family $mainFont
	
	// bg 'bg.jpg', top center
	background-color $color-graydarker
	// background-attachment fixed
	// -webkit-background-size cover
	// -moz-background-size cover
	// -o-background-size cover
	// background-size cover
	
body > main
	
	relative()
	min-height 100%
	width 100%
	
	// Фон с изображением
	bg 'bg.jpg', repeat-y center center
	// background-color $color-graydarker
	// background-attachment fixed
	// -webkit-background-size cover
	// -moz-background-size cover
	// -o-background-size cover
	// background-size cover


/*_________ HEADER ___________*/

body > main > header
	z-index 2
	width 100%
	height 40px

	background $color-gray

	&.fixed
		position fixed
		top 0

	> .container
		width  ($mainWidth)px
		height (40 - 12*2)px
		padding 12px 0
		margin 0 auto

		background $color-graylight

		> .content
			padding 0 5px
			block-inline()
			width  ($mainWidth - 5*2)px

			.logo
				a
					text-decoration none
					color #000

			nav#menu
				block-right()
				text-transform uppercase
				
				a 
					text-decoration none
					block-inline()
					relative()
					color #FFF

				ul
					float left
					padding 0
					li
						float left
						margin 0 0 0 50px
					

			.logo
				block-left()

/*_________ FOOTER ___________*/

body > main > footer
	absolute()
	bottom 0
	z-index 2
	width 100%
	height 40px

	background $color-graydark

	&.fixed
		position fixed
		bottom 0

	> .container
		width  ($mainWidth)px
		height (40 - 12*2)px
		padding 12px 0
		margin 0 auto

		background $color-gray

		> .content
			padding 0 5px
			block-inline()


/*_________ SECTIONS _________*/

body > main > .sections

	clear both
	width 100%
	padding-bottom 40px // Height of the footer

	// Для всех секций!
	> section

		clear both
		relative()
		z-index 1
		width 100%
		block-inline()

		> .container
			relative()
			width  ($mainWidth)px
			height 100%
			margin 0 auto

			background #F2E5D5

			> .content
				padding 50px 20px


/* _________ PAGES _________*/

section#index
	.container
		.content
			p 
				margin 20px 0
				line-height 1.4


/* _________ DEV PAGES _________*/

section#guideline
	
	h1
		font 36px $mainFont

	.row
		block-inline()
		clear both
		width 100%
		border-top 1px solid $color-gray
		padding 20px 0

	.colors
		div
			block-left 100 50
			padding 3px
			&.bg
				color #FFF

section#fonts
	.container
		.content
			padding 50px 20px
			h1
				margin 30px 0
				font-size 24px	
			h2
				margin 30px 0
				font-size 47px
			.fonts
				width (1265 - 40)px
				overflow hidden
				p
					margin 15px 0
					background #FFF
					padding 0 10px
					border 1px solid gray
					//white-space nowrap
					.lowercase
						text-transform lowercase
					.uppercase
						text-transform uppercase

/* _________ POPUPS ________*/

@require 'popup'

/* _________ MEDIA _________ */

@require 'media'