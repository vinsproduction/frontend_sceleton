/* Фон с изображением */

body > main
	
	position relative
	min-height 100%
	width 100%
	
	bg 'bg.jpg'
	background-repeat repeat-x

	// background-position top center
	// background-attachment fixed

	// -webkit-background-size cover
	// -moz-background-size cover
	// -o-background-size cover
	// background-size cover

	// &.bg
