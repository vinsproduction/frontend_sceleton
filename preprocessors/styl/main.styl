/* MAIN CONSTANTS */

$mainWidth 		= 1265
$mainHeight 	= 1000
$mainFont 		= 'Arial'

// COLORS

$black 	= #000
$white	= #FFFFFF
$red		= #ee2e24
$redHover= #db2920
$gray		= #ccc

/* MAIN STYLES */

textarea, input
	font-family $mainFont
	font-size 20px

textarea:focus, input:focus
	//

/* HELPERS STYLES */

.hide 
	display none

.btn
	cursor pointer
	font 20px $mainFont
	text-transform uppercase
	padding 5px 10px
	border 0
	outline none
	display inline-block
	color $white
	text-decoration none

	transition(all 0.3s)

	&.btn-red
		background $red
		&:hover
			background $redHover


