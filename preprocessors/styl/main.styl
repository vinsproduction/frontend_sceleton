/* HEADER */
body > main > header
	z-index 3
	width 100%
	height 40px
	background red

	&.fixed
		position fixed
		top 0

	.container
		width  ($mainWidth)px
		height (40 - 12*2)px
		padding 12px 0
		margin 0 auto

		background yellow

	nav#menu
		
		text-transform uppercase
		font-weight bold
		float none
		a 
			text-decoration none
			display inline-block
			position relative

		ul
			list-style-type none
			float left
			padding 0
			li
				float left
				margin 0 50px 0 0
				&:last-child
					margin 0

/* FOOTER */
body > main > footer
	position relative
	z-index 3
	width 100%
	height 40px

	background red

	&.fixed
		position fixed
		bottom 0

	.container
		width  ($mainWidth)px
		height (40 - 12*2)px
		padding 12px 0
		margin 0 auto

		background yellow

/* CONTENT */
body > main > .sections

	clear both
	width 100%

	/* Для всех секций! */
	> section

		clear both
		position relative
		z-index 3
		width 100%
		height 100%

		.container
			position relative
			width  ($mainWidth)px
			height 100%
			margin 0 auto

			background green

			.content
				padding 10px 0

	section#index

		.container
			
			.content
				height 500px


