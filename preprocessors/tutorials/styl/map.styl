		.list-2
			
			ul
				list-style-type none
				
				li
					clear both
					a
						color #e82154
						text-decoration none
						&.active
							text-decoration underline

						.icon
							background: url("../images/pict.png") no-repeat
							width 24px
							height 22px
							display inline-block
							float left
							margin-right: 5px

