
@import '../../styl/mixins'

pre.example
	clear both
	margin 20px 0
	font-size 14px

.container
	margin 50px 20px 20px 20px


	
#shop-map
	position relative

	#tooltip-area
		position: absolute
		z-index: 6
		text-transform: uppercase
		display: inline-block
		margin-left: -36px
		margin-top: -62px

		&.withlogo
			margin-top: -122px

		.tooltip-wrapper
			background-color: #FFF
			position: relative
			z-index: 6
			padding: 3px

			.tooltip-inner
				max-height: 20px
				overflow: hidden

				&.withlogo
					max-height: 80px

		.tooltip-corner
			position: relative
			z-index: 5
			background: url("../images/nav-corner.png")
			width: 36px
			height: 36px
			left: 0
	
	.brandlist
		width 250px
		height 580px
		overflow auto
		float left
		margin 0 5px 0 0
		border 2px solid #B34D48
		position relative

		.inner
			padding 0 5px 0 10px
			.title
				font 18px Arial
				text-transform uppercase

				a
					text-transform lowercase
					font-size 14px
					color #000
					text-decoration none
					border-bottom 1px dashed #000

			ul.list
				list-style-type none
				li
					margin 10px 0 0 0
					font 16px Arial
					cursor pointer
					font-weight bold
					&.active
						color rgb(238, 46, 36)
						border-bottom 1px solid #000


	.mapcontainer
		
		block-left()
		position relative
		border 10px solid #B34D48
		background #000
			
		.floors.nav
			position absolute
			top -43px
			z-index 1
			.floor
				position relative
				padding 10px 20px 6px 20px
				margin 0 0 0 4px
				background #000
				text-transform uppercase
				font 15px Arial
				display inline-block
				cursor pointer
				font-weight bold
				color #FFF

				a
					text-decoration none
					color #FFF

				&.ui-tabs-active
					background #B34D48

		.zoom
			position absolute
			top 0
			right 0
			z-index 3
			a 
				width: 35px
				height:35px
				background url("../images/zoom.png") no-repeat
				position relative
				display block
				cursor pointer
				
				&.plus
					background-position 0 0
					&:hover
						background-position -35px 0
				&.minus
					background-position 0 -35px
					&:hover
						background-position -35px -35px

		.preloader
			position absolute
			top 250px
			left 300px


		.wrapper
			
			overflow hidden

			.movebox
				//cursor move

				.map
					position relative
					z-index 2

	
	.menu
		
		width 247px
		height 580px
		overflow auto
		float left
		border 2px solid #B34D48
		margin-left 5px
		padding-left 30px
		.search
			clear both
			margin-bottom 20px

			input
				width 205px
				-webkit-box-shadow inset 0 3px 10px 1px #d8ddde
				-moz-box-shadow inset 0 3px 10px 1px #d8ddde
				box-shadow inset 0 3px 10px 1px #d8ddde
				border 1px solid #fff
				height 35px
				color #056d89
				padding-left 15px

