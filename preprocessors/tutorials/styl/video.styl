
@import '../../styl/mixins'

#video
	
	overflow hidden
	position relative

	.greed
		position absolute
		width 100%
		height 100%
		z-index 3
		background-image url('../img/bg_px.png')

	#player
		
		position relative
		
		video,object

			position absolute
			width 100%
			height 100%
			z-index 2
			left 0
			top 0
			bottom 0
			right 0

	.vjs-poster
		z-index 2

	.vjs-big-play-button
		display none !important
		visibility hidden

	.vjs-control-bar
		z-index 10

	.vjs-loading-spinner
		z-index 10
